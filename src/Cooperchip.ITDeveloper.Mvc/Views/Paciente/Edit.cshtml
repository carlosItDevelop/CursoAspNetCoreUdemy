@using Cooperchip.ITDeveloper.Domain.Enums
@model Cooperchip.ITDeveloper.Application.ViewModels.PacienteViewModel

@{
    ViewData["Title"] = "Editar Paciente";
}

<vc:cabecalho titulo="Medical Management-Sys / Módulo Pacientes" subtitulo="Módulo de Administração de Pacientes">

</vc:cabecalho>

<div class="row">
    <div class="panel panel-heading">
        <h3>Editar Paciente</h3>
    </div>

    <div class="panel panel-body">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <partial name="_edit_create" />


                <div class="form-group">
                    <label asp-for="DataInclusao" class="control-label"></label>
                    <input asp-for="DataInclusao" class="form-control" readonly="readonly" />
                    <span asp-validation-for="DataInclusao" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="UsuarioInclusao" class="control-label"></label>
                    <input asp-for="UsuarioInclusao" class="form-control" readonly="readonly" />
                    <span asp-validation-for="UsuarioInclusao" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="DataUltimaModificacao" class="control-label"></label>
                    <input asp-for="DataUltimaModificacao" class="form-control" readonly="readonly" />
                    <span asp-validation-for="DataUltimaModificacao" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="UsuarioUltimaModificacao" class="control-label"></label>
                    <input asp-for="UsuarioUltimaModificacao" class="form-control" readonly="readonly" />
                    <span asp-validation-for="UsuarioUltimaModificacao" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-success" />
                    <a asp-controller="Paciente" asp-action="Index" class="btn btn-info">Voltar à lista</a>
                </div>


            </form>
        </div>
    </div>



</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    @* Bundle  dataTable *@
    <script src="/bundle/dataTables.min.js"></script>
    <script src="~/bundle/dashboard.min.js"></script>

}



