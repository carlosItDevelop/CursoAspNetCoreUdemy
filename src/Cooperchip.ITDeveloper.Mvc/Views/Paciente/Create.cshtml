@using Cooperchip.ITDeveloper.Domain.Enums
@model Cooperchip.ITDeveloper.Application.ViewModels.PacienteViewModel

@{
    ViewData["Title"] = "Adicionar Paciente";
}

<vc:cabecalho titulo="Medical Management-Sys / Módulo Pacientes" subtitulo="Módulo de Administração de Pacientes">

</vc:cabecalho>

<div class="row">
    <div class="panel panel-heading">
        <h3>Adicionar Paciente</h3>
    </div>

    <div class="panel panel-body">
        <div class="col-md-4">
            <form asp-controller="Paciente" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <vc:summary></vc:summary>

                <partial name="_edit_create" />

                <div class="form-group">
                    <input type="submit" value="Adicionar Paciente" class="btn btn-success" />
                    <a asp-controller="Paciente" asp-action="Index" class="btn btn-info">Voltar à lista</a>
                </div>


            </form>
        </div>
    </div>



</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    @* Bundle  dataTable *@
    <script src="/bundle/dataTables.min.js"></script>
    <script src="~/bundle/dashboard.min.js"></script>

}
