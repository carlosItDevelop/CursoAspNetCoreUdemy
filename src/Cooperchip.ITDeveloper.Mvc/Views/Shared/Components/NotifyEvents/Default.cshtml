@using Microsoft.AspNetCore.Mvc.Razor
@model IEnumerable<Cooperchip.ITDeveloper.Domain.Entities.Triagem>



<a href="#" data-toggle="dropdown" class="tipB" title="Aguardando Atendimento">
    <i class="fa fa-bell-o"></i>
    <span class="sr-only">Notificações Eventos</span>
    @if (Model.Count() > 0)
    {
        <span class="badge badge-danger">@ViewBag.Total</span>
    }
</a>
<ul class="dropdown-menu right dropdown-notification" role="menu">

    <li>
        <a href="#" class="dropdown-menu-header">Notificações Eventos</a>
    </li>
    @if (Model.Count() > 0)
    {
        @foreach (var item in Model)
        {
            <li>
                <a asp-controller="Triagem" asp-action="Triagem" asp-route-id=@item.CodigoPaciente><i class="l-basic-life-buoy"></i> @item.DataNotificacao - @item.Mensagem</a>
            </li>
        }
    }
    else
    {
        <li>
            <a href="#"><i class="l-basic-life-buoy"></i> Nenhuma pendência para a Triagem.</a>
        </li>
    }


    @if (Model.Count() > 0)
    {
        <li>
            <a asp-controller="Triagem" asp-action="Index" class="view-all"> Veja todas <i class="l-arrows-right"></i> </a>
        </li>
    }
    else
    {
        <li>
            <a class="view-all"> Aguardando... </a>
        </li>

    }

</ul>
